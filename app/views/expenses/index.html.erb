<div class="container">
    <div class="row">
      <div class="col-md-9 about-us">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12 lead">
                Expenses <a class="btn btn-success pull-right" href="/expenses/new" role="button">Add new</a>
                <hr>
              </div>
            </div>
            <div class="row">
              <div class="col-md-8">
                <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Month</th>
                    <th>Year</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
                  <% @expenses.each do |expense| %>
                    <tr>
                      <td><%= expense.month%></td>
                      <td><%= expense.year%></td>
                      <td><%= expense.amount%></td>
                      <td><%= expense.status%></td>
                      <td><%= expense.description%></td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
