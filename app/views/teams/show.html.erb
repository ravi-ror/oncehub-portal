<div class="">
  <div class="row">
    <div class="col-md-12 about-us">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead">
              Team: <%= @team.name %>
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%if @sm%>
<div class="col-md-12 lead">
SM
</div>
<hr>
<div class="row text-center">
  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100">
      <div class="team-intials team-green">
        <%#= user.name.capitalize%>
        <img src="/assets/profile.png" alt="..." class="rounded-circle" height="200">
      </div>
      <div class="card-body">
      <h4 class="card-title"><%=@sm.name%></h4>
      <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sapiente esse necessitatibus neque.</p>
      </div>
      <div class="card-footer">
        <a href="/users/<%=@sm.id%>" class="btn btn-primary">Find Out More!</a>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="col-md-12 lead">
Members
</div>
<hr>
<div class="row text-center">
  <% @users.each_with_index do |user, index|%>
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="card h-100">
        <div class="team-intials <%= getColor(index)%>">
          <%#= user.name.capitalize%>
          <img src="/assets/profile.png" alt="..." class="rounded-circle" height="200">
        </div>
        <div class="card-body">
        <h4 class="card-title"><%=user.name%></h4>
        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sapiente esse necessitatibus neque.</p>
        </div>
        <div class="card-footer">
          <a href="/users/<%=user.id%>" class="btn btn-primary">Find Out More!</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

