<!DOCTYPE html>
<html>
  <head>
    <title>OncehubPortal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/images/favicon-gray-last-section.svg" alt="">
          Oncehub Portal
        </a>

        <div class="btn-group dropleft">
          <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-bars" aria-hidden="true"></i>
          </button>
          <div class="dropdown-menu">
            <% if user_signed_in? %>
              <a class="dropdown-item" href="/profile">
                <i class="fa fa-user-circle" aria-hidden="true"></i> <%= current_user.name%>
              </a>
              <a class="dropdown-item" href="/profile">
                <i class="fa fa-envelope-open" aria-hidden="true"></i> <%= current_user.email%>
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" rel="nofollow" data-method="delete" href="/logout">
                <i class="fa fa-sign-out" aria-hidden="true"></i> Logout 
              </a>
            <% else %>
            <a class="dropdown-item" href="/home">
              <i class="fa fa-home" aria-hidden="true"></i> Home
            </a>
            <a class="dropdown-item" rel="nofollow" href="/login">
                <i class="fa fa-sign-in" aria-hidden="true"></i> Login 
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </nav>  <!-- Navigation Ends-->

    <!-- Page Content -->
    <div class="container-fluid top-spacing">
      <!-- /#sidebar-wrapper -->
      <% if user_signed_in? %>
        <div id="wrapper">
          <!-- Sidebar -->
          <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
              <li>
                <a href="/profile">Profile</a>
              </li>
              <li>
                <a href="/users">Employees</a>
              </li>
              <li>
                <a href="/teams">Teams</a>
              </li>
              <li>
                <a href="/chat_rooms/new">Private Chat room</a>
              </li>
              <li>
                <a href="/retros/new">Retro</a>
              </li>
              <li>
                <a href="/pointing_pokers/new">Pointing poker</a>
              </li>

              <li>
                <a href="/leave-policies">Leave Policies</a>
              </li>

              <li>
                <a href="/expenses">Expenses</a>
              </li>

              <li>
                <a href="/about">About Us</a>
              </li>
              <li>
                <a href="/help">Help Articles</a>
              </li>
            </ul>
          </div>
        <!-- /#sidebar-wrapper -->
        </div>
      <% end %>
      <div class="<%= user_signed_in? ? 'menu-active py-4' : 'Py-4' %>">
        <%= yield %>
      </div>
    </div> <!-- Page Content -->
  </body>

  <script>
    $(function() {
      $("#navbarResponsive a[href='"+window.location.pathname+"']").closest('li').addClass('active');
    })
  </script>
</html>
