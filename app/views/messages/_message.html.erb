<div class="card"> # you can use "others" class for chat oher than yours
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        #<%= gravatar_for message.user %>
        <span class="initials">DM</span>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= message.user.email %> at <%= message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>